<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appearance_settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color_theme"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rb_system"
                android:minHeight="48dp"
                android:textSize="13sp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rb_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:minHeight="48dp"
                android:text="@string/rb_light" />

            <RadioButton
                android:id="@+id/rb_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:minHeight="48dp"
                android:text="@string/rb_dark" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/computer_background"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_change_bg"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="@string/btn_change_bg"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_reset_bg"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="@string/btn_reset_bg"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bg_mask_set"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"/>

            <ImageButton
                android:id="@+id/btn_full_scrim_mask_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_help_outline"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="@string/full_screen_mask_help" />
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_scrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bg_use_mask"
            android:textSize="18sp"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_alpha_title"
            android:text="@string/bg_mask_opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#757575"/>

        <SeekBar
            android:id="@+id/slider_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="@string/inpur_mask"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btn_input_mask_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_help_outline"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="@string/input_mask_help" />
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_input_scrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"
            android:text="@string/bg_use_mask" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_input_alpha_title"
                android:text="@string/bg_mask_opacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#757575" />
            <SeekBar
                android:id="@+id/slider_input_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_input_corner_title"
                android:text="@string/round_cornor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#757575" />
            <SeekBar
                android:id="@+id/slider_input_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyboard_style"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <ImageButton
                android:id="@+id/btn_keyboard_style_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_help_outline"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="@string/keyboard_style_help" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_keypad_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_style_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_material"
                android:minHeight="48dp"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_style_frosted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Material_Frosted_Glass"
                android:minHeight="48dp"
                android:textSize="13sp" />

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keyboard_color_B"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keyboard_color_A"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_palette_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deg_color"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_deg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rad_color"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_rad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset_color"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/keyboard_color_reset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>