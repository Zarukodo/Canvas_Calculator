<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="3"
    android:padding="4dp">

    <Button android:id="@+id/btn_sqrt"    android:text="√"   style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_pi"      android:text="π"   style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_pow"     android:text="^"   style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_fact"    android:text="!"   style="@style/AdvancedBtnStyle" />

    <Button android:id="@+id/btn_mode"    android:text="DEG" style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_sin"     android:text="sin" style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_cos"     android:text="cos" style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_tan"     android:text="tan" style="@style/AdvancedBtnStyle" />

    <Button android:id="@+id/btn_inv"     android:text="Inv" style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_e"       android:text="e"   style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_ln"      android:text="ln"  style="@style/AdvancedBtnStyle" />
    <Button android:id="@+id/btn_log"     android:text="log" style="@style/AdvancedBtnStyle" />

</androidx.gridlayout.widget.GridLayout>